  "workbench.editor.showTabs": "multiple",
  "workbench.editor.labelFormat": "short",
  "window.density.editorTabHeight": "compact",
  "workbench.editor.pinnedTabSizing": "compact",
  "workbench.editor.tabSizingFixedMinWidth": 38,
  "workbench.editor.tabSizingFixedMaxWidth": 38,
  //  === === === ===
  //  === SEARCH ===
  "search.smartCase": true,
  "search.seedWithNearestWord": true,
  "search.useGlobalIgnoreFiles": true,
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/dist": true,
    "**/build": true,
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/tmp": true,
    "**/coverage": true,
    "**/.nyc_output": true
  },
  //  === === === ===
  //  === FILES ===
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 3000,
  "files.defaultLanguage": "plaintext",
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.trimFinalNewlines": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true,
    "**/.next": true,
    "**/.nuxt": true,
    "**/coverage": true
  },
  //  === === === === === === === ===
  //  === EDITOR CONFIGURATION ===
  "editor.folding": false,
  "editor.tabSize": 2,
  "editor.tabCompletion": "on",
  "editor.dragAndDrop": false,
  "editor.glyphMargin": false,
  "editor.hover.sticky": false,
  "editor.linkedEditing": true,
  "editor.mouseWheelZoom": true,
  "editor.hover.enabled": false,
  "editor.renderWhitespace": "none",
  "editor.suggestSelection": "first",
  "debug.confirmOnExit": "never",
  "window.confirmBeforeClose": "never",
  "window.confirmSaveUntitledWorkspace": false,
  //  === === === === ===
  //  === EXPLORER ===
  "explorer.confirmDelete": false,
  "explorer.compactFolders": false,
  "explorer.openEditors.visible": 1,
  "explorer.fileNesting.enabled": true,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmPasteNative": false,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb, bun.lock",
    "Cargo.toml": "Cargo.lock",
    ".env": ".env.*",
    "docker-compose.yml": "docker-compose.*.yml, Dockerfile*"
  },
  //  === === === === === ===
  //  === GIT INTEGRATION ===
  "git.autofetch": "all",
  "git.confirmSync": false,
  "git.autofetchPeriod": 0,
  "git.showProgress": false,
  "git.rebaseWhenSync": true,
  "git.allowForcePush": true,
  "git.countBadge": "tracked",
  "git.ignoreSubmodules": true,
  "git.terminalGitEditor": true,
  "git.enableSmartCommit": true,
  "git.confirmForcePush": false,
  "git.followTagsWhenSync": true,
  "git.ignoreLimitWarning": true,
  "git.openAfterClone": "always",
  "git.allowNoVerifyCommit": true,
  "git.ignoreLegacyWarning": true,
  "git.ignoreRebaseWarning": true,
  "git.postCommitCommand": "sync",
  "git.replaceTagsWhenPull": true,
  "git.timeline.date": "authored",
  "git.confirmEmptyCommits": false,
  "git.showReferenceDetails": false,
  "git.confirmNoVerifyCommit": false,
  "git.ignoreMissingGitWarning": true,
  "git.timeline.showUncommitted": true,
  "git.showInlineOpenFileAction": false,
  "git.ignoreWindowsGit27Warning": true,
  "git.useCommitInputAsStashMessage": true,
  "git.blame.editorDecoration.enabled": true,
  "git.promptToSaveFilesBeforeStash": "never",
  "git.promptToSaveFilesBeforeCommit": "never",
  "git.openRepositoryInParentFolders": "always",
  "git.blame.statusBarItem.template": "${authorName}",
  "git.blame.editorDecoration.template": "${authorName}",
  //"explorer.excludeGitIgnore": false,
  //  === === === === === === === ===
