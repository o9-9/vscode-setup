  "chat.editor.fontSize": 14,
  "debug.console.fontSize": 12,
  "debug.console.lineHeight": 35,
  "editor.fontLigatures": "'ss01', 'cv03', 'zero'",
  "editor.fontFamily": "'JetBrains Mono', 'Cascadia Code', 'Fira Code', Consolas, 'Courier New', monospace",
