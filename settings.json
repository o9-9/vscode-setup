{
  //  - Updates - Privacy - Security - Show - Suggestions
  "update.mode": "manual",
  "update.showReleaseNotes": false,
  "update.enableWindowsBackgroundUpdates": false,
  "telemetry.telemetryLevel": "off",
  "telemetry.feedback.enabled": true,
  "security.restrictUNCAccess": false,
  "security.workspace.trust.enabled": false,
  "security.workspace.trust.banner": "never",
  "security.workspace.trust.emptyWindow": true,
  "security.workspace.trust.untrustedFiles": "open",
  "security.workspace.trust.startupPrompt": "never",
  "security.promptForLocalFileProtocolHandling": false,
  "security.promptForRemoteFileProtocolHandling": false,
  "workbench.secondarySideBar.showLabels": false,
  "workbench.view.alwaysShowHeaderActions": true,
  "editor.suggest.preview": true,
  "chat.renderRelatedFiles": true,
  "editor.suggest.localityBonus": true,
  "editor.suggest.matchOnWordStartOnly": false,
  "editor.suggest.shareSuggestSelections": true,
  "editor.quickSuggestions": {
    "comments": "on",
    "strings": "on",
    "other": "on"
  },
  //  - Theme and Icons - Editor Fonts - Badges and Problems - Highlight
  "workbench.iconTheme": "symbols",
  "workbench.colorTheme": "o9 Theme",
  "workbench.productIconTheme": "fluent-icons",
  "workbench.preferredDarkColorTheme": "o9 Theme",
  "editor.fontSize": 16,
  "editor.lineHeight": 1.8,
  "chat.editor.fontSize": 14,
  "debug.console.fontSize": 12,
  "debug.console.lineHeight": 35,
  "editor.fontLigatures": "'ss01', 'cv03', 'zero'",
  "editor.fontFamily": "'JetBrains Mono', 'JetBrains Mono Nerd Font Mono', 'JetBrainsMono Nerd Font', consolas, monospace",
  "markdown.preview.fontFamily": "Inter, -apple-system, BlinkMacSystemFont, 'Segoe WPC', 'Segoe UI', system-ui, 'Ubuntu', 'Droid Sans', sans-serif",
  "outline.problems.badges": false,
  "problems.defaultViewMode": "table",
  "problems.decorations.enabled": false,
  "editor.renderLineHighlight": "gutter",
  "editor.occurrencesHighlight": "off",
  "editor.unicodeHighlight.nonBasicASCII": false,
  "workbench.editor.highlightModifiedTabs": true,
  "editor.guides.highlightActiveIndentation": false,
  "editor.unicodeHighlight.ambiguousCharacters": false,
  //  - Location - Line - Interface - Title
  "debug.toolBarLocation": "docked",
  "workbench.sideBar.location": "right",
  "workbench.editor.tabActionLocation": "left",
  "workbench.editor.editorActionsLocation": "default",
  "editor.gotoLocation.multipleDefinitions": "goto",
  "editor.gotoLocation.multipleDeclarations": "goto",
  "editor.gotoLocation.multipleImplementations": "goto",
  "editor.gotoLocation.multipleReferences": "gotoAndPeek",
  "editor.gotoLocation.multipleTypeDefinitions": "gotoAndPeek",
  "editor.lineNumbers": "on",
  "debug.inlineValues": "off",
  "window.commandCenter": false,
  "window.title": "${activeRepositoryName}",
  "workbench.localHistory.maxFileEntries": 1000,
  "window.zoomLevel": 0.5,
  "window.dialogStyle": "custom",
  "window.menuBarVisibility": "compact",
  "window.autoDetectHighContrast": false,
  "window.newWindowDimensions": "inherit",
  "merge-conflict.diffViewPosition": "Below",
  "merge-conflict.autoNavigateNextConflict.enabled": true,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  //  - Word Wrap - Scroll Bar - Smooth Scrolling - Minimap - Cursor
  "editor.wordWrap": "on",
  "chat.editor.wordWrap": "on",
  "outline.collapseItems": "alwaysExpand",
  "editor.scrollBeyondLastLine": false,
  "editor.stickyScroll.enabled": false,
  "editor.scrollbar.vertical": "hidden",
  "workbench.list.horizontalScrolling": true,
  "workbench.editor.scrollToSwitchTabs": true,
  "editor.scrollbar.verticalScrollbarSize": 8,
  "editor.scrollbar.horizontalScrollbarSize": 8,
  "editor.smoothScrolling": true,
  "workbench.list.smoothScrolling": true,
  "editor.minimap.maxColumn": 50,
  "editor.minimap.autohide": "none",
  "editor.minimap.showSlider": "always",
  "editor.minimap.renderCharacters": false,
  "editor.cursorWidth": 5,
  "editor.cursorBlinking": "solid",
  "editor.hideCursorInOverviewRuler": true,
  "editor.cursorSmoothCaretAnimation": "on",
  //  - Terminal Settings
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.cursorWidth": 5,
  "terminal.integrated.fontWeight": "400",
  "terminal.integrated.cursorStyle": "block",
  "terminal.integrated.mouseWheelZoom": true,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.showExitAlert": false,
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.tabs.location": "left",
  "terminal.integrated.gpuAcceleration": "on",
  "terminal.integrated.smoothScrolling": true,
  "terminal.integrated.confirmOnKill": "never",
  "terminal.integrated.enableVisualBell": true,
  "terminal.integrated.hideOnStartup": "always",
  "terminal.integrated.stickyScroll.enabled": true,
  "terminal.integrated.fontLigatures.enabled": true,
  "terminal.integrated.cursorStyleInactive": "block",
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font Mono",
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    },
    "Command Prompt": {
      "path": [
        "${env:windir}\\Sysnative\\cmd.exe",
        "${env:windir}\\System32\\cmd.exe"
      ],
      "args": [],
      "icon": "terminal-cmd"
    },
    "Git Bash": {
      "source": "Git Bash"
    },
    "Windows PowerShell": {
      "path": "C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.exe"
    }
  },
  //  - Workbench - Search - Editor - Explorer- Confirm
  "workbench.tree.indent": 16,
  "workbench.tips.enabled": false,
  "workbench.editor.limit.value": 1,
  "workbench.startupEditor": "none",
  "workbench.enableExperiments": false,
  "workbench.editor.revealIfOpen": true,
  "workbench.layoutControl.enabled": false,
  "workbench.editor.closeOnFileDelete": true,
  "workbench.tree.renderIndentGuides": "none",
  "workbench.editor.enablePreviewFromQuickOpen": true,
  "workbench.editor.wrapTabs": true,
  "workbench.panel.showLabels": false,
  "workbench.editor.tabSizing": "shrink",
  "workbench.editor.showTabs": "multiple",
  "workbench.editor.labelFormat": "short",
  "window.density.editorTabHeight": "compact",
  "workbench.editor.pinnedTabSizing": "compact",
  "workbench.editor.tabSizingFixedMinWidth": 38,
  "workbench.editor.tabSizingFixedMaxWidth": 38,
  "search.smartCase": true,
  "search.seedWithNearestWord": true,
  "editor.folding": false,
  "editor.tabSize": 2,
  "editor.tabCompletion": "on",
  "editor.dragAndDrop": false,
  "editor.glyphMargin": false,
  "editor.hover.sticky": false,
  "editor.linkedEditing": true,
  "editor.mouseWheelZoom": true,
  "editor.hover.enabled": false,
  "editor.renderWhitespace": "none",
  "editor.suggestSelection": "first",
  "explorer.confirmDelete": false,
  "explorer.openEditors.visible": 1,
  "explorer.fileNesting.expand": true,
  "explorer.fileNesting.enabled": true,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmPasteNative": false,
  "debug.confirmOnExit": "never",
  "window.confirmBeforeClose": "never",
  "window.confirmSaveUntitledWorkspace": false,
  //  - Git Settings
  "git.autofetch": "all",
  "git.confirmSync": false,
  "git.autofetchPeriod": 0,
  "git.showProgress": false,
  "git.rebaseWhenSync": true,
  "git.allowForcePush": true,
  "git.countBadge": "tracked",
  "git.ignoreSubmodules": true,
  "git.terminalGitEditor": true,
  "git.enableSmartCommit": true,
  "git.confirmForcePush": false,
  "git.followTagsWhenSync": true,
  "git.ignoreLimitWarning": true,
  "git.openAfterClone": "always",
  "git.allowNoVerifyCommit": true,
  "git.ignoreLegacyWarning": true,
  "git.ignoreRebaseWarning": true,
  "git.postCommitCommand": "sync",
  "git.replaceTagsWhenPull": true,
  "git.timeline.date": "authored",
  "git.confirmEmptyCommits": false,
  "git.showReferenceDetails": false,
  "git.confirmNoVerifyCommit": false,
  "git.ignoreMissingGitWarning": true,
  "git.timeline.showUncommitted": true,
  "git.showInlineOpenFileAction": false,
  "git.ignoreWindowsGit27Warning": true,
  "git.useCommitInputAsStashMessage": true,
  "git.blame.editorDecoration.enabled": true,
  "git.promptToSaveFilesBeforeStash": "never",
  "git.promptToSaveFilesBeforeCommit": "never",
  "git.openRepositoryInParentFolders": "always",
  "git.blame.statusBarItem.template": "${authorName}",
  "git.blame.editorDecoration.template": "${authorName}",
  //  -  Git Ignore
  //"explorer.excludeGitIgnore": false,
  //  - COPILOT - Chat  - Extensions  - Other Settings
  "chat.agent.enabled": true,
  "chat.agent.maxRequests": 1000,
  "chat.tools.autoApprove": true,
  "chat.commandCenter.enabled": false,
  "github.copilot.chat.agent.runTasks": true,
  "github.copilot.chat.codesearch.enabled": true,
  "github.copilot.chat.agent.thinkingTool": true,
  "github.copilot.nextEditSuggestions.enabled": true,
  "github.copilot.selectedCompletionModel": "gpt-4o-copilot",
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "scm.diffDecorations": "none",
  "zenMode.centerLayout": false,
  "editor.guides.indentation": false,
  "editor.accessibilitySupport": "off",
  "editor.guides.bracketPairs": "active",
  "debug.allowBreakpointsEverywhere": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.hideUnchangedRegions.enabled": true,
  "extensions.verifySignature": false,
  "extensions.autoCheckUpdates": false,
  "extensions.ignoreRecommendations": true,
  "extensions.autoUpdate": "onlyEnabledExtensions",
  //  - Default clone directory
  "git.defaultCloneDirectory": "~/Projects",
  "[github-actions-workflow]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  //  - Default and User Settings
  //"workbench.settings.openDefaultSettings": true,
  //  - Settings .json
  //"workbench.settings.editor": "json",
  //  - Formatter and Languages
  "editor.formatOnType": true,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[json]": {
    // "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[powershell]": {
    "editor.defaultFormatter": "ms-vscode.powershell"
  },
  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "[c]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "[csharp]": {
    "editor.defaultFormatter": "ms-dotnettools.csharp"
  },
  "[aspnetcorerazor]": {
    "editor.defaultFormatter": "ms-dotnettools.csharp"
  },
  "[svg]": {
    "editor.defaultFormatter": "jock.svg"
  },
  "[xml]": {
    "editor.defaultFormatter": "DotJoshJohnson.xml"
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[typescript]": {
    // "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[java]": {
    // "editor.defaultFormatter": "redhat.java"
  },
  "[php]": {
    // "editor.defaultFormatter": "vscode.php-language-features"
  },
  "[astro]": {
    // "editor.defaultFormatter": "dprint.dprint"
  },
  "[python]": {
    // "editor.defaultFormatter": "ms-python.python"
  },
  "[go]": {
    // "editor.defaultFormatter": "golang.go"
  },
  "[rust]": {
    // "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },
  "notebook.lineNumbers": "on",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "files.associations": {
    "*.config": "xml",
    ".github/workflows/*.yml": "yaml"
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "auto-rename-tag.activationOnLanguage": ["*"],
  "githubPullRequests.pullBranch": "never",
  "githubPullRequests.experimental.chat": true,
  "githubPullRequests.createOnPublishBranch": "never",
  "githubPullRequests.experimental.useQuickChat": true,
  "docker.extension.enableComposeLanguageServer": false,
  "redhat.telemetry.enabled": false
}
