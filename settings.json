{
  // --- GENERAL SETTINGS ---

  // --- Security SETTINGS ---
  "security.restrictUNCAccess": false,
  "security.workspace.trust.enabled": false,
  "security.workspace.trust.banner": "never",
  "security.workspace.trust.emptyWindow": true,
  "security.workspace.trust.untrustedFiles": "open",
  "security.workspace.trust.startupPrompt": "never",

  // --- Privacy SETTINGS ---
  "update.mode": "manual",
  "extensions.autoUpdate": false,
  "update.showReleaseNotes": false,
  "telemetry.telemetryLevel": "off",
  "telemetry.feedback.enabled": false,
  "npm.fetchOnlinePackageInfo": false,
  "extensions.verifySignature": false,
  "workbench.enableExperiments": false,
  "extensions.autoCheckUpdates": false,
  "update.enableWindowsBackgroundUpdates": false,
  "extensions.experimental.issueQuickAccess": false,
  "workbench.settings.enableNaturalLanguageSearch": false,

  // --- Performance & Optimization ---
  "workbench.sideBar.location": "right",
  "window.autoDetectColorScheme": false,
  "editor.renderControlCharacters": false,
  "workbench.editor.closeOnFileDelete": true,
  "powershell.developer.setExecutionPolicy": false,
  "workbench.editor.alwaysShowEditorActions": true,
  "editor.inlineSuggest.edits.showCollapsed": true,
  "files.watcherExclude": {
    "**/dist/**": true,
    "**/build/**": true,
    "**/.hg/store/**": true,
    "**/.git/objects/**": true,
    "**/node_modules/**": true,
    "**/.git/subtree-cache/**": true
  },
  "search.exclude": {
    "**/dist": true,
    "**/coverage": true,
    "**/node_modules": true,
    "**/bower_components": true
  },
  "files.exclude": {
    "**/.hg": true,
    "**/CVS": true,
    "**/.git": true,
    "**/.svn": true,
    "**/.project": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.settings": true,
    "**/.classpath": true,
    "**/.factorypath": true
  },

  // --- Distraction Reduction SETTINGS ---
  "breadcrumbs.enabled": true,
  "editor.minimap.enabled": true,
  "explorer.compactFolders": false,
  "workbench.editor.showTabs": "multiple",
  "editor.cursorSmoothCaretAnimation": "on",
  "workbench.startupEditor": "newUntitledFile",
  "window.menuBarVisibility": "compact",
  "editor.cursorBlinking": "solid",
  "workbench.activityBar.location": "default",
  "workbench.editor.tabSizing": "shrink",

  // --- Editor Improvements SETTINGS ---
  "editor.tabSize": 2,
  "editor.fontSize": 13,
  "editor.lineHeight": 25,
  "editor.wordWrap": "on",
  "editor.folding": false,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.formatOnSave": false,
  "editor.hover.sticky": false,
  "editor.formatOnType": false,
  "debug.console.fontSize": 12,
  "editor.letterSpacing": 0.3,
  "editor.formatOnPaste": false,
  "editor.fontLigatures": true,
  "editor.fontWeight": "normal",
  "debug.console.lineHeight": 22,
  "editor.quickSuggestionsDelay": 0,
  "diffEditor.renderSideBySide": true,
  "zenMode.silentNotifications": true,
  "emmet.triggerExpansionOnTab": true,
  "editor.accessibilitySupport": "off",
  "window.confirmBeforeClose": "never",
  "editor.guides.bracketPairs": "active",
  "emmet.showSuggestionsAsSnippets": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.semanticHighlighting.enabled": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairsHorizontal": "active",
  "editor.guides.highlightActiveIndentation": true,
  "editor.copyWithSyntaxHighlighting": false,
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.fontFamily": "JetBrainsMono Nerd Font Mono",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "editor.quickSuggestions": {
    "other": true,
    "strings": true,
    "comments": true
  },

  // --- File Handling SETTINGS ---
  "files.eol": "\n",
  "files.autoSave": "off",
  "files.encoding": "utf8",
  "files.trimFinalNewlines": true,
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,

  // --- Terminal SETTINGS ---
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.lineHeight": 1.2,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.confirmOnKill": "never",
  "terminal.integrated.tabs.defaultIcon": "github",
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font Mono",
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell",
      "args": ["-NoLogo"]
    },
    "Command Prompt": {
      "path": ["${env:windir}\\Sysnative\\cmd.exe", "${env:windir}\\System32\\cmd.exe"],
      "args": [],
      "icon": "terminal-cmd"
    },
    "Git Bash": {
      "source": "Git Bash"
    }
  },

  // --- Window SETTINGS ---
  "window.zoomLevel": 0,
  "window.commandCenter": false,
  "window.title": "${rootName}",
  "window.restoreWindows": "none",
  "window.dialogStyle": "custom",
  "window.titleBarStyle": "custom",
  "window.customTitleBarVisibility": "auto",

  // --- COMPATIBILITY SETTINGS ---
  "editor.autoIndent": "full",
  "editor.lineNumbers": "on",
  "debug.inlineValues": "on",
  "workbench.tree.indent": 16,
  "editor.glyphMargin": false,
  "editor.cursorStyle": "block",
  "editor.tabCompletion": "on",
  "scm.diffDecorations": "all",
  "editor.hover.enabled": false,
  "debug.onTaskErrors": "abort",
  "editor.mouseWheelZoom": true,
  "debug.confirmOnExit": "never",
  "editor.matchBrackets": "near",
  "editor.smoothScrolling": true,
  "workbench.tips.enabled": false,
  "explorer.confirmDelete": false,
  "editor.minimap.autohide": true,
  "outline.problems.badges": false,
  "git.decorations.enabled": false,
  "debug.console.closeOnEnd": true,
  "editor.renderWhitespace": "none",
  "debug.toolBarLocation": "docked",
  "explorer.openEditors.visible": 1,
  "editor.guides.indentation": false,
  "zenMode.centerLayout": false,
  "search.showLineNumbers": true,
  "search.decorations.badges": false,
  "workbench.statusBar.visible": true,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmPasteNative": false,
  "editor.occurrencesHighlight": "off",
  "editor.stickyScroll.enabled": false,
  "explorer.decorations.badges": false,
  "debug.autoExpandLazyVariables": "on",
  "workbench.editor.revealIfOpen": true,
  "problems.decorations.enabled": false,
  "editor.scrollbar.vertical": "hidden",
  "editor.minimap.showSlider": "always",
  "editor.renderLineHighlight": "gutter",
  "workbench.editor.enablePreview": true,
  "accessibility.signalOptions.volume": 0,
  "window.newWindowDimensions": "inherit",
  "extensions.ignoreRecommendations": true,
  "editor.hideCursorInOverviewRuler": true,
  "editor.minimap.renderCharacters": false,
  "workbench.list.openMode": "doubleClick",
  "debug.allowBreakpointsEverywhere": true,
  "workbench.editor.closeEmptyGroups": true,
  "terminal.integrated.splitCwd": "inherited",
  "window.density.editorTabHeight": "compact",
  "terminal.integrated.smoothScrolling": true,
  "workbench.editor.scrollToSwitchTabs": true,
  "workbench.editor.decorations.badges": true,
  "workbench.editor.decorations.colors": true,
  "workbench.editor.tabActionLocation": "left",
  "window.confirmSaveUntitledWorkspace": false,
  "terminal.integrated.gpuAcceleration": "auto",
  "workbench.tree.renderIndentGuides": "always",
  "workbench.editor.pinnedTabSizing": "compact",
  "workbench.editor.tabSizingFixedMinWidth": 40,
  "workbench.editor.limit.perEditorGroup": true,
  "workbench.editor.tabSizingFixedMaxWidth": 80,
  "workbench.editor.highlightModifiedTabs": true,
  "editor.unicodeHighlight.nonBasicASCII": false,
  "editor.gotoLocation.multipleReferences": "goto",
  "editor.gotoLocation.multipleDefinitions": "goto",
  "editor.gotoLocation.multipleDeclarations": "goto",
  "workbench.editor.enablePreviewFromQuickOpen": true,
  "editor.gotoLocation.multipleImplementations": "goto",
  "editor.gotoLocation.multipleTypeDefinitions": "goto",
  "workbench.editor.enablePreviewFromCodeNavigation": true,
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "terminal.external.windowsExec": "C:\\Users\\o9\\AppData\\Local\\Microsoft\\WindowsApps\\wt.exe",
  "files.associations": {
    ".env*": "properties",
    "*.ps1": "powershell",
    "*.json": "jsonc"
  },

  // --- Continuous Suggestion Display ---
  "editor.suggest.shareSuggestSelections": true,
  "editor.suggest.showWords": false,
  "editor.suggest.filterGraceful": true,
  "editor.suggest.localityBonus": true,

  // --- Faster Suggestion Response ---
  "editor.suggest.showMethods": true,
  "editor.suggest.showFunctions": true,
  "editor.suggest.showVariables": true,

  // --- POWERSHELL SETTINGS ---
  "powershell.pester.codeLens": true,
  "powershell.enableProfileLoading": true,
  "powershell.promptToUpdatePowerShell": true,
  "powershell.pester.useLegacyCodeLens": false,
  "powershell.codeFormatting.preset": "Custom",
  "powershell.codeFormatting.useCorrectCasing": true,
  "powershell.integratedConsole.showOnStartup": false,
  "powershell.codeFormatting.autoCorrectAliases": true,
  "powershell.codeFormatting.ignoreOneLineBlock": true,
  "powershell.codeFormatting.whitespaceInsideBrace": true,
  "powershell.codeFormatting.newLineAfterCloseBrace": true,
  "powershell.codeFormatting.addWhitespaceAroundPipe": true,
  "powershell.codeFormatting.alignPropertyValuePairs": true,
  "powershell.integratedConsole.suppressStartupBanner": true,
  "powershell.codeFormatting.whitespaceAfterSeparator": true,
  "powershell.codeFormatting.whitespaceAroundOperator": true,
  "powershell.codeFormatting.whitespaceBeforeOpenBrace": true,
  "powershell.codeFormatting.whitespaceBeforeOpenParen": true,
  "powershell.integratedConsole.focusConsoleOnExecute": false,
  "powershell.codeFormatting.trimWhitespaceAroundPipe": false,
  "powershell.debugging.createTemporaryIntegratedConsole": true,
  "powershell.codeFormatting.whitespaceBetweenParameters": true,
  "powershell.powerShellDefaultVersion": "Windows PowerShell (x64)",
  "powershell.codeFormatting.pipelineIndentationStyle": "IncreaseIndentationAfterEveryPipeline",

  // --- Git SETTINGS ---
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.confirmPush": false,
  "git.inputValidation": false,
  "git.enableSmartCommit": true,
  "git.postCommitCommand": "sync",
  "git.showPushSuccessNotification": true,
  "git.alwaysShowStagedChangesResourceGroup": true,

  // --- EXTENSION SETTINGS ---

  // --- Theme SETTINGS ---
  "workbench.colorTheme": "o9 Theme",
  "workbench.preferredDarkColorTheme": "o9 Theme",

  // --- Icon SETTINGS ---
  "workbench.iconTheme": "symbols",
  "workbench.productIconTheme": "fluent-icons",

  // --- GITHUB COPILOT SETTINGS ---
  "editor.suggest.showIssues": true,
  "editor.suggest.showClasses": true,
  "editor.suggestSelection": "first",
  "editor.suggest.showConstants": true,
  "editor.inlineSuggest.enabled": true,
  "editor.snippetSuggestions": "inline",
  "editor.suggest.insertMode": "insert",
  "editor.parameterHints.enabled": true,
  "editor.acceptSuggestionOnEnter": "on",
  "editor.inlineSuggest.showToolbar": "onHover",
  "github.copilot.chat.codesearch.enabled": true,
  "github.copilot.chat.agent.thinkingTool": true,
  "github.copilot.editor.enableCodeActions": true,
  "editor.inlineSuggest.suppressSuggestions": false,
  "github.copilot.chat.generateTests.codeLens": true,
  "github.copilot.nextEditSuggestions.enabled": true,
  "editor.wordBasedSuggestions": "matchingDocuments",
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "scminput": true
  },
  "github.copilot.advanced": {
    "enable": {
      "*": true
    },
    "inlineSuggest.enable": true,
    "listCount": 5,
    "debug.showScores": false
  },

  // --- Prettier SETTINGS ---
  "prettier.semi": true,
  "prettier.tabWidth": 2,
  "prettier.endOfLine": "lf",
  "prettier.printWidth": 100,
  "prettier.singleQuote": true,
  "prettier.trailingComma": "es5",
  "prettier.bracketSpacing": true,
  "prettier.jsxSingleQuote": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // --- ESLint SETTINGS ---
  "eslint.format.enable": true,
  "eslint.lintTask.enable": true,
  "eslint.codeActionsOnSave.mode": "all",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue",
    "html"
  ],

  // --- GitLens  SETTINGS ---
  "gitlens.hovers.enabled": true,
  "gitlens.codeLens.enabled": true,
  "gitlens.currentLine.enabled": true,
  "gitlens.views.repositories.location": "scm",

  // --- Bracket Pair Colorizer SETTINGS ---
  "bracket-pair-colorizer-2.colors": [
    "#fafafa",
    "#9F51B6",
    "#F7C244",
    "#F07850",
    "#9CDD29",
    "#C497D4"
  ],

  // --- Path Intellisense SETTINGS ---
  "path-intellisense.mappings": {
    "/": "${workspaceFolder}",
    "lib": "${workspaceFolder}/lib",
    "src": "${workspaceFolder}/src"
  },

  // --- Markdown All in One SETTINGS ---
  "markdown.extension.toc.levels": "2..6",
  "markdown.extension.toc.slugifyMode": "github",
  "markdown.extension.preview.autoShowPreviewToSide": false,

  // --- Better Comments SETTINGS ---
  "better-comments.multilineComments": true,
  "better-comments.highlightPlainText": true,
  "better-comments.tags": [
    {
      "tag": "!",
      "color": "#FF2D00",
      "strikethrough": false,
      "backgroundColor": "transparent"
    },
    {
      "tag": "?",
      "color": "#3498DB",
      "strikethrough": false,
      "backgroundColor": "transparent"
    },
    {
      "tag": "//",
      "color": "#474747",
      "strikethrough": true,
      "backgroundColor": "transparent"
    },
    {
      "tag": "todo",
      "color": "#FF8C00",
      "strikethrough": false,
      "backgroundColor": "transparent"
    },
    {
      "tag": "*",
      "color": "#98C379",
      "strikethrough": false,
      "backgroundColor": "transparent"
    }
  ],

  // --- LANGUAGE-SPECIFIC SETTINGS ---

  // --- JavaScript & TypeScript SETTINGS ---
  "typescript.format.enable": true,
  "javascript.format.enable": true,
  "typescript.suggest.autoImports": true,
  "javascript.suggest.autoImports": true,
  "typescript.preferences.quoteStyle": "single",
  "javascript.referencesCodeLens.enabled": true,
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.importModuleSpecifier": "shortest",

  // --- HTML SETTINGS ---
  "html.format.wrapLineLength": 120,
  "html.format.wrapAttributes": "auto",
  "html.completion.attributeDefaultValue": "doublequotes",

  // --- CSS, SCSS, LESS SETTINGS ---
  "css.validate": true,
  "less.validate": true,
  "scss.validate": true,
  "css.lint.unknownAtRules": "ignore",

  // --- PHP SETTINGS ---
  "php.suggest.basic": true,
  "php.validate.enable": true,

  // --- JSON & YAML SETTINGS ---
  "json.format.enable": true,
  "yaml.format.enable": true,
  "json.schemas": [],
  "yaml.schemas": {}
  /*
  // --- Python SETTINGS ---
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.formatting.provider": "black",
