  "python.linting.pylintPath": "${workspaceFolder}/.venv/Scripts/pylint",
  "python.formatting.blackPath": "${workspaceFolder}/.venv/Scripts/black",
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/Scripts/python.exe",

  // --- C# SETTINGS ---
  "csharp.format.enable": true,
  "omnisharp.enableRoslynAnalyzers": true,
  "omnisharp.enableImportCompletion": true,
  "omnisharp.useEditorFormattingSettings": true,

  // --- Go SETTINGS ---
  "go.testOnSave": false,
  "go.useLanguageServer": true,
  "go.formatTool": "goimports",
  "go.buildOnSave": "workspace",
  "go.lintTool": "golangci-lint",

  // --- Java SETTINGS ---
  "java.format.enabled": true,
  "java.format.settings.url": "eclipse-formatter.xml",
  "java.configuration.updateBuildConfiguration": "automatic",

  // --- Ruby SETTINGS ---
  "ruby.format": true,
  "ruby.lint": {
    "ruby": true,
    "rubocop": true
  },

  // --- Rust SETTINGS ---
  "rust-analyzer.checkOnSave.command": "clippy",
  "rust-analyzer.completion.autoimport.enable": true,
  "rust-analyzer.inlayHints.chainingHints.enable": true,

  // --- Docker & Kubernetes SETTINGS ---
  "docker.showStartPage": false,
  "bracket-pair-colorizer-2.depreciation-notice": false

  "workbench.colorCustomizations": {
    "statusBar.background": "#0a0a0a",
    "statusBar.debuggingBackground": "#0a0a0a",
    "statusBar.noFolderBackground": "#0a0a0a",
    "menu.background": "#141414",
    "terminal.background": "#0a0a0a",
    "panel.background": "#0a0a0a",
    "tab.inactiveBackground": "#0a0a0a",
    "tab.hoverBackground": "#141414",
    "tab.activeBackground": "#141414",
    "titleBar.activeBackground": "#0a0a0a",
    "editorGroupHeader.tabsBackground": "#0a0a0a",
