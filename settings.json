    "editor.quickSuggestions": {
      "comments": "on",
      "strings": "on",
      "other": "on"
    }
  },
  // === EXPERIMENTAL COPILOT FEATURES ===
  "github.copilot.chat.experimental.agent.vscode": true,
  "github.copilot.chat.experimental.debugCodeLens": true,
  "github.copilot.chat.experimental.agent.terminal": true,
  "github.copilot.chat.experimental.agent.workspace": true,
  "github.copilot.chat.experimental.editorInlineChat": true,
  "github.copilot.chat.experimental.inlineChat.enable": true,
  "github.copilot.chat.experimental.agent.gitCommitMessage": true,
